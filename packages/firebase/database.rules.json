{
  "rules": {
    "asset-summaries": {
      "$uid": {
        ".read": "auth !== null && auth.uid === $uid",
        ".write": "false"
      }
    },

    "hashtag-summaries": {
      "$hashtag": {
        ".read": "auth !== null",
        ".write": "false"
      }
    },

    "label-summaries": {
      "$labelId": {
        ".read": "auth !== null",
        ".write": "false"
      }
    },

    "user-sessions": {
      "$uid": {
        ".read": "auth !== null && auth.uid === $uid",
        ".write": "auth !== null && auth.uid === $uid"
      },
      ".indexOn": ["oldestSessionTimestamp"]
    }
  }
}