{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "ES2021.String"],

    "baseUrl": "src",
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ]
}
